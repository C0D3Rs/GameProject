@model IEnumerable<GameProject.Models.Entities.Event>
@{
    ViewBag.Title = "Index Event";
}

<h2>Events</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

@foreach (var one_event in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelLocation => one_event.Name)
        </td>
        <td>
            @Html.DisplayFor(modelLocation => one_event.Type)
        </td>
        <td>
            <a type="button" class="btn btn-warning" href="@Url.Action("Edit/"+@one_event.Id, "Event")">
                <i class="glyphicon glyphicon-edit"></i> Edytuj
            </a>
        </td>
        <td>
            <a type="button" class="btn btn-danger" href="@Url.Action("Delete/"+@one_event.Id, "Event")">
                <i class="glyphicon glyphicon-trash"></i> Usuń
            </a>
        </td>
        <td>
            <a type="button" class="btn btn-info" href="@Url.Action("Details/"+@one_event.Id, "Event")">
                <i class="glyphicon glyphicon-eye-open"></i> Zobacz
            </a>
        </td>
    </tr>
}

</table>

