@model GameProject.Models.Entities.Location

@{
    ViewBag.Title = "Edycja";
}

<h2>Edycja Lokacji</h2>

@using (Html.BeginForm("Edit", "Location"))
{

@Html.AntiForgeryToken()

@Html.HiddenFor(model => model.ID)
@Html.HiddenFor(model => model.ImageId)
@Html.HiddenFor(model => model.CurrentVersion)

   <div class="form-horizontal">
        <h4>Lokacja</h4>
        <hr />

        <div class="form-group">
            <label class = "control-label col-md-2"> Nazwa</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-2"> Opis</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Wróć do listy", "Index")
</div>
