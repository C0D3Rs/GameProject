@model IEnumerable<GameProject.Models.Entities.Location>
@{
    ViewBag.Title = "Spis Lokacji";
}

<h2>Lokacje</h2>
<p>
    @Html.ActionLink("Dodaj Lokacje", "Create", "Location" )
</p>
<table class="table">
    <tr>
        <th>
            Nazwa
        </th>
        <th></th>
    </tr>

@foreach (var location in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelLocation => location.Name)
        </td>
        <td>

        <a type="button" class="btn btn-warning" href="@Url.Action("Edit/"+location.ID, "Location")">
            <i class="glyphicon glyphicon-edit"></i> Edytuj
        </a>

        @if(ViewData["isAnyImages"] != null) {
            <a type="button" class="btn btn-info" href="@Url.Action("Set", "Image", new { category = ImageCategory.Location, id = location.ID })">
                <i class="glyphicon glyphicon-picture"></i> Ustaw obrazek
            </a>
        }

        <a type="button" class="btn btn-primary" href="@Url.Action("Details/"+location.ID, "Location")">
            <i class="glyphicon glyphicon-eye-open"></i> Zobacz
        </a>

        <a type="button" class="btn btn-success" href="@Url.Action("Create", "Event", new { locationID=location.ID })">
            <i class="glyphicon glyphicon-plus"></i> Dodaj Event
        </a>

        </td>
    </tr>
}

</table>

