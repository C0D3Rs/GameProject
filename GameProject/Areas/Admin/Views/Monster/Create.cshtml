@model Monster

@{
    ViewBag.Title = "Create";
}

<h2>Utwórz Potwora</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Nazwa</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Opis</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Poziom</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Level)
                @Html.ValidationMessageFor(model => model.Level)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Życie</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Life)
                @Html.ValidationMessageFor(model => model.Life)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Minimalne obrażenia</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MinDamage)
                @Html.ValidationMessageFor(model => model.MinDamage)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Maksymalne obrażenia</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaxDamage)
                @Html.ValidationMessageFor(model => model.MaxDamage)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Obrona</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Defense)
                @Html.ValidationMessageFor(model => model.Defense)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Szybkość ataku</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AttackSpeed)
                @Html.ValidationMessageFor(model => model.AttackSpeed)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Szansa na trafienie</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ChanceToHit)
                @Html.ValidationMessageFor(model => model.ChanceToHit)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Utwórz" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    <p>
        <a type="button" class="btn btn-default" href="@Url.Action("Index", "Monster")">
            <i class="glyphicon glyphicon-arrow-left"></i> Wróć do listy
        </a>
    </p>
</div>
