@model DetailsMonsterViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Monster</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Nazwa</dt>

        <dd>
            @Html.DisplayFor(model => model.Monster.Name)
        </dd>

        <dt>Opis</dt>

        <dd>
            @Html.DisplayFor(model => model.Monster.Description)
        </dd>

        <dt>Poziom</dt>

        <dd>
            @Html.DisplayFor(model => model.Monster.Level)
        </dd>

        <dt>Życie</dt>

        <dd>
            @Html.DisplayFor(model => model.Monster.Life)
        </dd>

        <dt>Obrażenia</dt>

        <dd>
            @Html.DisplayFor(model => model.Monster.MinDamage) -
            @Html.DisplayFor(model => model.Monster.MaxDamage)
        </dd>

        <dt>Obrona</dt>

        <dd>
            @Html.DisplayFor(model => model.Monster.Defense)
        </dd>

        <dt>Szybkość ataku</dt>

        <dd>
            @Html.DisplayFor(model => model.Monster.AttackSpeed)
        </dd>

        <dt>Szansa na trafienie</dt>

        <dd>
            @Html.DisplayFor(model => model.Monster.ChanceToHit)
        </dd>

        <dt>Obrazek</dt>

        @if (Model.Image != null)
        {
            <dd>
                <img src="@Url.Action("Show","Image", new { imageName = Model.Image.FileName })" />
            </dd>
        }
    </dl>
</div>
<div>
    <br />
    <a type="button" class="btn btn-default" href="@Url.Action("Index", "Monster")">
        <i class="glyphicon glyphicon-arrow-left"></i> Wróć do listy
    </a>
</div>