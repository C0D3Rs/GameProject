@model GameProject.Models.Entities.Message

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Message</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Date, new { @Value = System.DateTime.Now })


        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ContentOfMessage, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ContentOfMessage)
                @Html.ValidationMessageFor(model => model.ContentOfMessage)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ToUserId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("ToUserName")
                @Html.ValidationMessageFor(model => model.ToUserId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
