@model GameProject.Models.Entities.Message

@{
    ViewBag.Title = "Create";
}
</div>
<div class="container welcome">
<h2>Utwórz wiadomość</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Date, new { @Value = System.DateTime.Now })


        <div class="form-group">
<label class="control-label col-md-2">Tytuł</label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Treść wiadomości</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ContentOfMessage)
                @Html.ValidationMessageFor(model => model.ContentOfMessage)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nazwa użytkownika</label>
            <div class="col-md-10">
                @Html.TextBox("ToUserName")
                @Html.ValidationMessageFor(model => model.ToUserId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Create" class="btn btn-success"><i class="glyphicon glyphicon-send"></i> Wyślij</button>
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Powrót do spisu wiadomości", "Index")
</div>
</div>